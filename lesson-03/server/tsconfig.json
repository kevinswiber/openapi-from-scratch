{
  "compilerOptions": {
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "resolvePackageJsonImports": true,
    "verbatimModuleSyntax": true
  },
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "dist"
    ],
    "excludeFiles": [
      "**/*.js"
    ],
    "synchronousWatchDirectory": true
  }
}
